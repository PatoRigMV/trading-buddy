# Trading Assistant Environment Variables
# Copy this file to .env and fill in your actual values

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# Flask Configuration
SECRET_KEY=  # Generate with: python -c 'import secrets; print(secrets.token_hex(32))'
ENVIRONMENT=development  # Options: development, staging, production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000  # Comma-separated list

# ===========================================
# TRADING API (Required for trading features)
# ===========================================

# Alpaca Trading API (Paper Trading)
# Get keys at: https://alpaca.markets
APCA_API_KEY_ID=
APCA_API_SECRET_KEY=
APCA_API_BASE_URL=https://paper-api.alpaca.markets  # Use paper-api for testing

# Trading Mode
TRADING_MODE=paper  # Options: paper, live

# ===========================================
# MARKET DATA APIs (At least one required)
# ===========================================

# Polygon.io - Real-time market data
# Get key at: https://polygon.io/dashboard
POLYGON_API_KEY=

# Finnhub - Real-time quotes and fundamentals
# Get key at: https://finnhub.io/register
FINNHUB_API_KEY=

# Alpha Vantage - Backup pricing and fundamentals
# Get key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=

# ===========================================
# OPTIONAL MARKET DATA APIs
# ===========================================

# RapidAPI - For Twelve Data, FMP, StockTwits
# Get key at: https://rapidapi.com
RAPIDAPI_KEY=

# YCharts - Professional financial analytics
# Contact YCharts for API access
YCHARTS_API_KEY=

# Tiingo - Real-time IEX data and news
# Get key at: https://www.tiingo.com
TIINGO_API_TOKEN=

# NewsAPI - News articles
# Get key at: https://newsapi.org/register
NEWSAPI_KEY=

# Benzinga - Professional news feed
# Contact Benzinga for API access
BENZINGA_API_KEY=

# ===========================================
# OPTIONAL INFRASTRUCTURE
# ===========================================

# Database Configuration
# DATABASE_URL=postgresql://user:password@localhost:5432/trading_assistant

# Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379/0

# Monitoring & Logging
# SENTRY_DSN=  # Sentry error tracking
# LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
